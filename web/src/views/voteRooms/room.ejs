<%- include('../partials/header') %>
<%- include('../partials/candiModal') %>
<%- include('../partials/qrModal') %>
<% const roomData = room%>
<div class="custom-container mt-5 mb-5 active">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="javascript:history.back()" class="text-secondary">투표 목록</a>
        <button class="btn btn-custom" onclick="voteBtnClickEvent(<%= roomData.id%>)">투표 하기</button>
    </div>

    <h2 class="mb-4 text-center"><%=roomData.name%></h2>

    <hr>
    <div class="room-card mt-5 mb-5">
            <div class="row">
                <div class="col-md-6 text-center">
                    <img src=<%=roomData.img%> class="room-image img-fluid rounded" alt="Voting Image">
                </div>
                <div class="col-md-6 room-info">
                    <div>
                        <div class="room-card-body mb-4">
                            <div class="row">
                                <div class="col-md-2 room-card-body-img">
                                    <img class="gif" src="/imgs/loading.gif">
                               </div>
                                <div class="col-md-10">
                                    <div class="row">
                                        <h6 style="font-weight: bold;">투표상태</h6>
                                    </div>
                                    <div class="row state-badge-container">
                                        <span class="state-badge badge bg-warning text-dark">투표중</span>
                                    </div>
                                </div>
                            </div>                        
                        </div>
                        <div class="room-card-body mt-4">
                            <div class="row">
                                <div class="col-md-2 room-card-body-img">
                                        <img class="gif" src="/imgs/calendar.png">
                                </div>
                                <div class="col-md-10">
                                    <div class="row">
                                        <h6 style="font-weight: bold;">투표 기간</h6>
                                    </div>
                                    <div class="row">
                                       <h6><%=roomData.sDate%> ~ <%=roomData.eDate%></h6> 
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body row mt-2" style="padding: 10px; border: none;">
                            <div class="col-md-4 card-body me-1">
                                <div class="row">
                                    <div class="col-md-4 card-body-img">
                                        <img class="gif" src="/imgs/one.png">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="row">
                                            <h6 style="font-weight: bold;">후보자 수</h6>
                                        </div>
                                        <div class="row">
                                            <h6><%=roomData.Candidates.length%></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 card-body ms-1">
                                <div class="row">
                                    <div class="col-md-4 card-body-img">
                                        <img class="gif" src="/imgs/many.png">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="row">
                                            <h6 style="font-weight: bold;">유권자 수</h6>
                                        </div>
                                        <div class="row">
                                            <h6><%=roomData.voterCount%></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                    </div>
                </div>    
            </div>
    </div>
    <hr>
    <div class="row m-5">
        <div class="col-md-8">
            <h4>투표 세부 내용</h4>
            <%=roomData.desc%>
            <div class="details-toggle">더보기</div>
        </div>
    </div>
    <hr>

    <h4 class="mt-5 mb-3">후보자 목록 <span class="badge bg-secondary"><%=roomData.Candidates.length%></span></h4>

    <div class="scrollable-div">
        <% for(let i=0;i<roomData.Candidates.length; i++){ %>
            <button class="room-candidate-item" onclick="modalBtnClickEvent(<%=JSON.stringify(roomData.Candidates[i].dataValues)%>)"> 
                <span class="rank-circle"><%= roomData.Candidates[i].num %></span>
                <img class=" room-candidate-img col-md-1" src=<%=roomData.Candidates[i].img %> >
                <div class="col-md-10">
                    <strong style="font-size: 20px;"><%= roomData.Candidates[i].name %></strong><br>
                </div>
            </button>
        <%}%>
    </div>
    <div class="mb-5">

    </div>
</div>
<script type="module" src="/scripts/room.js"></script>
<%- include('../partials/footer') %>
